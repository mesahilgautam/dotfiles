elif [ "$(cat /sys/class/net/w*/operstate 2>/dev/null)" = 'down' ] ; then
	[ "$(cat /sys/class/net/w*/flags 2>/dev/null)" = '0x1003' ] && wifiicon="ó°¤® " || wifiicon="âŒ "
fi

# Ethernet
[ "$(cat /sys/class/net/e*/operstate 2>/dev/null)" = 'up' ] && ethericon=" ó°ˆ€ " || ethericon=""


# USB tetering
usb=""
output=$(cat /sys/class/net/e*/operstate 2>/dev/null)
for i in $output
do
    if [ $i = 'unknown' ]
    then
        usb=" ó°•“ "
    fi
done
# [ "$(cat /sys/class/net/e*/operstate 2>/dev/null)" = 'unknown' ] && usb="ðŸŒ " || usb="âŽ "

# TUN
