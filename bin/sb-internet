#!/bin/sh

# Show wifi ðŸ“¶ and percent strength or ðŸ“¡ if none.
# Show ðŸŒ if connected to ethernet or âŽ if none.
# Show ðŸ”’ if a vpn connection is active

# Wifi ó°¤Ÿ ó°¤¢ ó°¤¥ ó°¤¨
if [ "$(cat /sys/class/net/w*/operstate 2>/dev/null)" = 'up' ] ; then

	 strength="$(awk '/^\s*w/ { print int($3 * 100 / 70)}' /proc/net/wireless)"
     # strengthrem=$(($strength/10 )) # find the int division with 10
     # strength=$(( $strengthrem*10 )) # multiply with 10

     # install wireless tools
     hostname=$(iwgetid -r)
     # short="${hostname:0:5}.."
     short=$hostname
     wifiicon="ï‡«  $short"
# ($strength)
     # case $strength in 
     #     100|90|80)     wifiicon="ó°¤¨ ($strength)";;
     #     70|60|50)      wifiicon="ó°¤¢ ($strength)";;
     #     40|30)         wifiicon="ó°¤¢ ($strength)";;
